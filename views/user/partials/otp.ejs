<%- include('../layouts/header') %>

<div class="container">
  <div class="line-break text-center py-4">
    <span class="shadow-heading">OTP Verification</span>
  </div>
  <div class="row mb-5 pt-4">
    <span class="text-center pb-3" style="font-size: 0.8rem; text-transform: none;">
        Enter the OTP sent to your email
        <p class="text-danger mt-0 pt-4 fw-bold text-uppercase"><%= locals.errorMessage %></p>
    </span>
    
    <div class="col-lg-5 mx-auto">        
      <!-- <form action="/user/otp_verification" method="post"> -->
        <form action="" method="post">
        <div class="mb-3">
          <input
            type="number"
            class="form-control"
            id="form-holder"
            placeholder="OTP"
            name="otp"
          />
        </div>
        <input type="submit" class="btn btn-dark w-100" value="Sign Up" />
      </form>
      <span
        class="text-center pb-3"
        style="font-size: 0.8rem; text-transform: none"
      >
      </span>
      <span class="mt-3 text-right">
        <a class="text-danger text-right mt-5 fw-bold" id="resend-button" style="font-size: 0.8rem;" href="/users/signUp/resendOTP"></a>
</span>
    </div>
  </div>
</div>
<%- include('../layouts/footer') %>
