      <!-- Carousel wrapper -->
      <%if (banners!=null){%>
      <div
        id="carouselVideoExample"
        class="carousel slide carousel-fade mx-auto"
        data-bs-ride="carousel"
        style="position: relative; top: -6px"
      >
        <!-- Inner -->
        <div class="carousel-inner h-75">
          <!-- Single item -->
          <%banners.forEach(banner => {%>
          <div
            class="carousel-item active h-75"
            style="background-position: center; background-size: cover; background: #000;"
          >
            <%if(banner.videoURL){%>
            <video class="" autoplay loop muted  style="
                object-fit: cover;
                height: 60%;
                width: 100%;
                aspect-ratio: 2.5;
              ">
              <source src="<%=banner.videoURL%>" type="video/mp4" />
            </video>
            <%}else{%>
            <img
              src="/public/img/banners/<%=banner.image%>"
              alt=""
              style="
                object-fit: cover;
                height: 50%;
                width: 100%;
                aspect-ratio: 2.5;
              "
            />
            <%}%>
            <a href="/products/">
              <div
                class="carousel-caption d-lg-block d-none mt-5"
                style="position: absolute; top: 60%; left: 20%"
              >
                <h3
                  style="
                    text-shadow: 1px 1px #7c7c7c;
                    font-size: 1.7rem;
                    color: rgb(173, 174, 172);
                  "
                >
                  <%=banner.title%>
                </h3>
                <p style="text-shadow: 1px 1px #7c7c7c; font-size: 1rem">
                  <%=banner.description%>
                </p>
              </div>
            </a>
            <a href="/<%=banner.url%>">
              <div
                class="carousel-caption d-block d-lg-none"
                style="position: absolute"
              >
                <h3 style="text-shadow: 1px 1px #7c7c7c; font-size: 0.8rem">
                  <%=banner.title%>
                </h3>
                <p style="text-shadow: 1px 1px #7c7c7c; font-size: 0.5rem">
                  <%=banner.description%>
                </p>
              </div>
            </a>
          </div>
          <%})%>
        </div>
        <!-- Inner -->

        <!-- Controls -->
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselVideoExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
